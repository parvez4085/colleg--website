                    <th>Delete</th>
                </tr>
           @using System.Data;
            @using System.Data.SqlClient;
            @using CSJM.Models;
       
            @{
                ConnectionManager cm = new ConnectionManager();
                string cmd = "select *from TBL_NewsEvent";
                System.Data.DataTable dt = cm.GetBulkRecord(cmd);
                if(dt.Rows.Count>0)
                {
                    int a=1;
                    for(int i=0;i<dt.Rows.Count;i++)
                    {
                        <tr>
                            <td>@a</td>
                            <td>@dt.Rows[i]["Title"].ToString()</td>
                            <td>@dt.Rows[i]["Img"].ToString()</td>
                            <td>@dt.Rows[i]["dt"].ToString()</td>
                             <td><a href="/Admin/Delete?dt7=@dt.Rows[i]["Sn"].ToString() " onclick="return confirm('Are you sure')"><i class="fa fa-trash"></i></a></td>
                        </tr>
                        a++;
                    }
                }
                
            }
                </table>
        </div> 

