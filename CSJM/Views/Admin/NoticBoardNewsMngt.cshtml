@{
    ViewBag.Title = "NoticBoardNewsMngt";
    Layout = "~/Views/Shared/AdminPageLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12" style="border:2px solid">
        &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      
         <center><span style="float:left;font-size:18px;"> @Html.ActionLink("Add Notics","../Admin/NoticBoard" , "NoticBoard.cshtml")</span> <font style="font-size:30px;">   <strong>Notic Board And News Event Mangement</strong> </font><span style="float:right; font-size:18px;"> @Html.ActionLink("Add NewsEvents", "../Admin/NewsEvent", "NewsEvent")</span></center>
