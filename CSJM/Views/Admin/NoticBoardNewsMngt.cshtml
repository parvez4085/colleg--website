        <div class="col-lg-6 col-sm-6 col-xs-12 col-md-6" style="border:1px solid #d8dede;">

            <h4 style="text-align:center;color:#f00;">Notic Board Delete</h4>
            <table class="table">
                <tr>
                    <th>S.N.</th>
                    <th>Notic Text</th>
                    <th>Files</th>
                    <th>Date</th>
                    <th>Delete</th>
                </tr>
           @using System.Data;
            @using System.Data.SqlClient;
            @using CSJM.Models;
       
            @{
                ConnectionManager cm = new ConnectionManager();
                string cmd = "select *from TBL_NoticBoard";
                int j = 0;
                System.Data.DataTable dt = cm.GetBulkRecord(cmd);
                if(dt.Rows.Count>0)
                {
                    for(int i=0;i<dt.Rows.Count;i++)
                    {
                        j++;
                        <tr>
                            <td>@j</td>
                            <td>@dt.Rows[i]["Text"].ToString()</td>
                            <td>@dt.Rows[i]["Img"].ToString()</td>
                            <td>@dt.Rows[i]["dt"].ToString()</td>
                             <td><a href="/Admin/Delete?dt3=@dt.Rows[i]["Sn"].ToString() " onclick="return confirm('Are you sure')"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    }
                }
                
            }
                </table>
        </div> 

          <div class="col-lg-6 col-sm-6 col-xs-12 col-md-6" style="border:1px solid #d8dede;">

