@{
    ViewBag.Title = "Electronics";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<div class="col-lg-2">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action" href="../Home/Computer">Computer Science & Engineering </a>
      <a class="list-group-item list-group-item-action" href="../Home/Information">Information Technology</a>        
       <a class="list-group-item list-group-item-action" href="../Home/Electronics">Electranics Engineering </a>
       <a class="list-group-item list-group-item-action" href="../Home/Applied">Applied Science </a>

    </div>
  </div>
   <div class="col-lg-10">
       <div class="row">
               <div class="col-lg-12 card" style="background-color:#af0202;color:#FFFFFF; padding:0; margin:0">
                   <center> <i class="fa fa-graduation-cap" style="font-size:36px; color:#ffffff;"></i><font style="font-size:30px;">  <strong>Electranics Engineering</strong></font></center>
                   </div>

           <div class="col-lg-12" style="margin-bottom:20px; border:1px solid #d8dede;">
               <div class="row">
                   @using System.Data
                   @using System.Data.Sql
                   @using CSJM.Models
                   @{
                       ConnectionManager cm = new ConnectionManager();
                       string cmd = "select *from TBL_TeachersDetails";
                       System.Data.DataTable dt=cm.GetBulkRecord(cmd);
                       if(dt.Rows.Count>0)
                       {
                           for(int i=0;i<dt.Rows.Count;i++)
                           {
                               var Department = dt.Rows[i]["Department"].ToString();
                               if (Department == "Electronics Engg.")
                               {
                                   var Name = dt.Rows[i]["FirstName"].ToString();
                                   var Name1 = dt.Rows[i]["LastName"].ToString();
                                   var Post = dt.Rows[i]["Post"].ToString();
                                   var MobNo = dt.Rows[i]["MobNo"].ToString();
                                   var Email = dt.Rows[i]["EmailId"].ToString();
                               
                               var Img ="../Content/TeacherImg/"+ dt.Rows[i]["Img"].ToString();
                               var FullName = Name + "  " + Name1;
                                <div class="col-lg-4"id="pic_show" style="min-height:250px;  padding:10px;">
                                   <a href="@Img" target="_blank"><img class="img-fluid"  src="@Img" height="100%" width="100px%" /></a>
                  
                              <div style="padding:10px 15px 7px 15px;" class="card1">
                                 <p style="text-align:justify"><strong >NAME:- @FullName</strong></p><hr/>
                                 <p style="text-align:justify"><strong>POST:- @Post</strong></p><hr/>
                                  <p style="text-align:justify"><strong ><span class="fa fa-bank"></span> @Department</strong></p><hr />
                                  <p style="text-align:justify"><strong ><span class="fa fa-envelope"></span> @Email</strong></p><hr />
                                  <p style="text-align:justify"><strong ><span class="fa fa-phone"></span> @MobNo</strong></p><hr />
                                  
                             </div>
		                </div>
                   }
                   }
                           
                       }
                   
                       
                   }

                  
                     
           </div>

    </div>
       </div>
       </div>
   