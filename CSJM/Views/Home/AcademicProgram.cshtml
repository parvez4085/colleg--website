@{
    ViewBag.Title = "AcademicProgram";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<div class="col-lg-3 Left">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action" href="../Home/AcademicProgram">Academic Program</a>
      <a class="list-group-item list-group-item-action" href="../Home/Syllabus" role="tab">Syllabus</a>
        <a class="list-group-item list-group-item-action" href="../Home/Admission">Admission </a>
      <a class="list-group-item list-group-item-action" href="../Home/FeesStructure">Fees Structure </a>
    
    </div>
  </div>
    <div class="col-lg-9">
       <div class="row">
           <div class="col-lg-12" style="border:1px solid #d8dede;padding:0;margin-bottom:50px;">
        <div class="card" style="background-color:#af0202;color:#FFFFFF;">
           <center> <i class="fa fa-external-link" style="font-size:36px; color:#ffffff;"></i><font style="font-size:30px;">  <strong>Academic Program</strong></font></center>
           </div>
               <div class="col-lg-8  table-responsive" style="padding:0">
           <table class="table table-striped table-hover">
              <tr>
                  <th>S.N</th>
                  <th>Group</th>
                  <th>Course Name</th>
                  <th>No. Of Intake</th>
                  
              </tr>

               
                   @using System.Data
                   @using System.Data.Sql
                   @using CSJM.Models
                   @{
                       ConnectionManager cm = new ConnectionManager();
                       string cmd = "select *from TBL_AcademicProgram";
                       System.Data.DataTable dt=cm.GetBulkRecord(cmd);
                       if (dt.Rows.Count > 0)
                       {
                            int id=0;
                           for (int i = 0; i < dt.Rows.Count; i++)
                           {
                               id++;
                             
                               <tr>
                                  <td>@id</td>
                                  <td>@dt.Rows[i]["GroupName"].ToString()</td>
                                  <td>@dt.Rows[i]["Course"].ToString()</td>
                                  <td>@dt.Rows[i]["Intake"].ToString()</td>
                       </tr>
                            
                           }
                          
                       }
                       }
               </table>
                   </div>
              
               <div class="col-lg-4" style="padding:0">
                  <table class="table table-striped table-hover">
                     
                      <tr>
                          <th>Admission Process</th>
                      </tr>
                       <tr>
                           <td>The entrance process is conducted every year under the &nbsp; &nbsp<br /><a href="https://jeecup.nic.in/cms/public/home.aspx" target="_blank" style="text-decoration:underline;">Joint Entrance Examination Council</a>  Uttar Pradesh State.</td>
                                  </tr>

    </table>
               </div>
       </div>
           </div>
        </div>
      
